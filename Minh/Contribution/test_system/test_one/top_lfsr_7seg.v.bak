module top_lfsr_7seg (
    input clock_10Mhz,
    input reset,
    input i_enable,
    output [2:0] Anode_Activate,
    output [6:0] LED_out
);

    wire slow_clk;
    wire [3:0] random_number;
    wire o_system;

    // === Clock Divider ===
    Clock_divider clkdiv_inst (
        .clock_in(clock_10Mhz),
        .clock_out(slow_clk)
    );

    // === LFSR runs on slow clock ===
    lfsr_top lfsr_inst (
        .clk(slow_clk),
        .rst(reset),
        .i_enable(i_enable),
        .o_lfsr(random_number),
        .o_system(o_system)
    );

    // === Display runs on fast clock ===
    Seven_segment_LED_Display_Controller display_inst (
        .clock_10Mhz(clock_10Mhz),
        .reset(reset),
        .displayed_number({12'b0, random_number}),
        .Anode_Activate(Anode_Activate),
        .LED_out(LED_out)
    );

endmodule
