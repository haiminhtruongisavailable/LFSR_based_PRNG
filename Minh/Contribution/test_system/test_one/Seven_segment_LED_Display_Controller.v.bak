module Seven_segment_LED_Display_Controller(
    input clock_10Mhz,
    input reset,
    input [15:0] displayed_number, // now input from top module
    output reg [2:0] Anode_Activate,
    output reg [6:0] LED_out
);
    reg [19:0] refresh_counter; 
    wire [1:0] LED_activating_counter; 
    reg [3:0] LED_BCD;

    // refresh logic
    always @(posedge clock_10Mhz or posedge reset)
    begin 
        if(reset)
            refresh_counter <= 0;
        else
            refresh_counter <= refresh_counter + 1;
    end 

    assign LED_activating_counter = refresh_counter[19:18];

    always @(*)
    begin
        case(LED_activating_counter)
        2'b00: begin
            Anode_Activate = 3'b001; 
            LED_BCD = displayed_number / 1000;    // thousands
        end
        2'b01: begin
            Anode_Activate = 3'b010; 
            LED_BCD = (displayed_number % 1000) / 100; // hundreds
        end
        2'b10: begin
            Anode_Activate = 3'b011; 
            LED_BCD = (displayed_number % 100) / 10;   // tens
        end
        2'b11: begin
            Anode_Activate = 3'b100; 
            LED_BCD = displayed_number % 10;          // ones
        end
        endcase
    end

    always @(*)
    begin
        case(LED_BCD)
        4'b0000: LED_out = 7'b0111111;
        4'b0001: LED_out = 7'b0000110;
        4'b0010: LED_out = 7'b1011011;
        4'b0011: LED_out = 7'b1001111;
        4'b0100: LED_out = 7'b1100110;
        4'b0101: LED_out = 7'b1101101;
        4'b0110: LED_out = 7'b1111101;
        4'b0111: LED_out = 7'b0000111;
        4'b1000: LED_out = 7'b1111111;
        4'b1001: LED_out = 7'b1101111;
        default: LED_out = 7'b0000001;
        endcase
    end
endmodule
